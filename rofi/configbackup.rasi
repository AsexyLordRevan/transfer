// Config //
configuration {
    modi:                        "drun,filebrowser,run";
    show-icons:                  true;
    display-drun:                "";
    display-run:                 "";
    display-filebrowser:         "";
    display-window:              "";
    drun-display-format:         "{name}";

    window-format:               "{w}{t}";
    font:                        "Fira Code 10";
    icon-theme:                  "Tela-circle-dracula";
}

@theme "/dev/null"


// Main //
window {
    height:                      330px;
    width:                       1280px;
    transparency:                "real";
    fullscreen:                  false;
    location:                    south;
    ancor:                       south;
    enabled:                     true;
    cursor:                      "default";
    spacing:                     0px;
    padding:                     0px;
    border-radius:               10px 10px 0px 0px;
    border:                      3px;
    border-color:              #eb6f92;
    background-color:            transparent;

}
mainbox {
    enabled:                     true;
    spacing:                     0px;
    padding:                     0px;
    orientation: vertical;
    margin: 0px;
    children:                    [ "listbox", "inputbar" ];
    background-color:            #232136b3;
}



// Inputs //
inputbar {
    enabled:                     true;
    children:                    [ "entry" ];
    background-color:          transparent;
    border: 3px;
    border-radius: 10px 10px 0px 0px;
    border-color: #eb6f92;
    margin: -3px;
}
entry {
    enabled:                     true;
    color:                     #cad3f5;
    padding: 10px;
    placeholder: "";
    background-color: transparent;
}

textbox-prompt-colon {
    expand: false;
    background-color: transparent;
    str: ":";
}

// Lists //
listbox {
    padding:                     0px;
    spacing:                     0px;
    orientation:                 horizontal;
    children:                    [ "listview" , "mode-switcher" ];
    background-color:            transparent;

}
listview {
    padding:                     10px 10px 10px 0px;
    spacing:                     10px;
    enabled:                     true;
    columns:                     1;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                false;
    fixed-columns:               true;
    cursor:                      "default";
    background-color:            transparent;
    text-color:                  #e0def4;
}


// Modes //
mode-switcher {
    orientation:                 vertical;
    enabled:                     true;
    background-color:            transparent;
}
button {
    cursor:                      pointer;
    padding:                     25px;
    spacing:                     0px;   // 0em * 10px
    border-radius:               10px 0px 0px 10px;
    background-color:            transparent;
    text-color:                  #e0def4;
    margin: 10px 0px 10px 10px;
    border-color: #eb6f92;
    border: 3px 0px 3px 3px;
}
button selected {
    background-color: transparent;
    text-color:                  #e0def4;
    border-color: #3e8fb0;
}


// Elements //
element {
    orientation:                 horizontal;
    enabled:                     true;
    spacing:                     2px;
    padding:                     5px;
    cursor:                      pointer;
    border-radius:               0px 10px 10px 0px;
    border: 3px 3px 3px 0px;
    border-color: #eb6f92;
    background-color: transparent;   
    text-color: #cad3f5; 
    
}
element selected.normal {
    border-color: #3e8fb0;
    background-color: transparent;
}
element-icon {
    size:                        22px;  // 5.5em * 10px
    background-color:            transparent;
}
element-text {
    horizontal-align:              0;
    padding:0px 0px 0px 10px;
    vertical-align:0.5;
    background-color:            transparent;
    text-color: inherit;
}

// Error message //
error-message {
    text-color:                  #e0def4;
    text-transform:              capitalize;
    children:                    [ "textbox" ];
    background-color: transparent;
}

textbox {
    text-color:                  inherit;
    background-color: transparent;
    vertical-align:              5px;
    horizontal-align:            5px;
}
